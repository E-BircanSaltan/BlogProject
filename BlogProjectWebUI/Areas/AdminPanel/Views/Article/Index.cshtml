@using BlogProjectWebUI.Core.DTO.Article;
@model List<ArticleDTO>
@{
    ViewData["Title"] = "Makaleler";
    Layout = "~/Areas/AdminPanel/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


@Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Makaleler</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-block btn-success" data-toggle="modal" data-target="#modal-MakaleAdd">Ekle</button>
        </div>
    </div>
    <div class="card-body">
        <table id="tblMakaleler" class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th style="width:10%"></th>
                    <th>Makale</th>
                    <th style="width:25%">İşlemleri</th>
                </tr>
            </thead>
            <tbody>
                @{
                    for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>@Convert.ToInt32(i+1)</td>
                            <td>@Model[i].Title</td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btnMakaleDetay btn btn-info" data-id=@Model[i].Guid>Güncelle</button>
                                    <button type="button" class="btnMakaleSil btn btn-danger" data-id=@Model[i].Guid>Sil</button>
                                </div>
                            </td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    <!-- /.card-footer-->
</div>
<div class="modal fade" id="modal-MakaleAdd">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Makale Ekle</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="txtMakaleAd_Add">Makale Adı</label>
                    <input type="text" class="form-control" id="txtMakaleAd_Add">
                </div>
                <div class="form-group">
                    <label for="txtMakaleAd_Add">Kategorisi</label>
                    <select class="custom-select rounded-0" id="ddlMakaleKategori">
                        <option>Value 1</option>
                        <option>Value 2</option>
                        <option>Value 3</option>
                    </select>
                   
                </div>
                <div class="form-group">
                    <label for="txtMakaleAd_Add">Kategorisi</label>
                    <select class="custom-select rounded-0" id="ddlMakaleKategori">
                        <option>Value 1</option>
                        <option>Value 2</option>
                        <option>Value 3</option>
                    </select>

                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" id="btnMakale_AddKaydet">Kaydet</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="modal fade" id="modal-MakaleUpdate">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Makale Detay</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="txtMakaleAd_Update">Makale Adı</label>
                    <input type="text" class="form-control" id="txtMakaleAd_Update">
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                <button type="button" class="btn btn-primary" id="btnMakale_UpdateKaydet">Kaydet</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

